
@model IEnumerable<DEV_3.Model.TransactionViewModel>
@{Layout = "~/Views/Shared/PersonDashboard.cshtml";}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h3 class="m-0 font-weight-bold text-primary">My Transactions</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.transaction_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.capture_date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Account)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.description)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.availableBalance)
                        </th>*@
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.transaction_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.capture_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.acc_code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.availableBalance)
                        </td>*@
                    <td>
                        @Html.ActionLink("Edit", "EditTransaction", new { id = item.code }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.code }) |*@
                        @Html.ActionLink("Delete", "DeleteTransaction", new { id = item.code })
                    </td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    $.noConflict();

    jQuery(document).ready(function ($) {
        $('#dataTable').DataTable();
    });
</script>




