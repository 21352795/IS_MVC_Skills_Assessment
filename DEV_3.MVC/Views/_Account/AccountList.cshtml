@using PagedList
@using PagedList.Mvc
@model IPagedList<DEV_3.Model._AccountViewModel>
@{Layout = "~/Views/Shared/_AdminDash.cshtml";}


<div><h1 class="title text-center">Accounts List</h1></div>

<div>


</div>
<table class="table-condensed" cellpadding="20" cellspacing="20" align="center">
    <tr>
        <th>
            @Html.Label("Account code")
        </th>
        <th>
            @Html.Label("Account Number")
        </th>
        <th>
            @Html.Label("balance")
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.account_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.outstanding_balance)
            </td>

            <td>
                @Html.ActionLink("Edit", "EditAccount", new { id = item.code }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.code }) |*@
                @Html.ActionLink("Delete", "DeleteAccount", new { id = item.code })
            </td>
        </tr>
    }

</table>
 Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("AccountList", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)






